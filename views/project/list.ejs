<%- include ../partials/header.ejs %> <%- include ../partials/top_nav.ejs %>

<main class="container">
  <br />
  <a href="/projects/add" class="btn btn-primary"
    ><i class="fa-solid fa-plus fa-lg"></i> Add Project</a
  >
  <br />
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Deadline</th>
        <th scope="col">Update</th>
        <!-- <th scope="col">Delete</th> -->
      </tr>
    </thead>
    <tbody>
      <% for (let index = 0; index < ProjectList.length; index++) { %>
      <tr>
        <td><%= ProjectList[index].title %></td>
        <td><%= ProjectList[index].description %></td>
        <td><%= ProjectList[index].date %></td>
        <td>
          <!-- update -->
          <a href="/projects/edit/<%= ProjectList[index].id%>"
            ><button type="button" class="btn btn-info">Update</button></a
          >
        </td>
        <td>
          <!-- delete -->
          <!-- <a href="/projects/delete/<%= ProjectList[index].id%>"
            ><i class="fa-solid fa-delete-right fa-sm"></i
            ><button
              type="button"
              class="btn btn-danger"
              onclick="return confirm('Are you sure?')"
            >
              Delete
            </button></a
          > -->
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</main>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
